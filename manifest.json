{
  "name": "ToMute",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "Extension to mute Twitch when ads play!",
  "homepage_url": "https://github.com/amastov/ToMute",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "host_permissions": ["*://*.twitch.tv/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["src/ToMute.js"]
    }
  ]
}
